{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions" : [
        {
            "name": "client",
            "image": "raghavhub/multi-client",
            "hostname": "client",
            "essential": false,
            "memory": 128
        },
        {
            "name": "server",
            "image": "raghavhub/multi-server",
            "hostname": "api",
            "essential": false,
            "memory": 128

        },
        {
            "name": "worker",
            "image": "raghavhub/multi-worker",
            "hostname": "worker",
            "essential": false,
            "memory": 128
        },
        {
            "name": "nginx",
            "image": "raghavhub/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "memory": 128,
            "portmappings": [
                {
                    "hostport": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client", "server"]
        }

    ]
}